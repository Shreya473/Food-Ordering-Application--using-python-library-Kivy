<PostCard>:
    orientation: 'vertical'
    size_hint_y: None
    height: "420dp"
    spacing: 2
    elevation: 0

    # Post
    FitImage:
        adaptive_height: True
        source: root.post


    # Reactions
    MDBoxLayout:
        padding: 5, 0, 0, 0
        spacing: 2
        adaptive_height: True

        MDIconButton:
            icon: 'profile'

        Widget:

            MDIconButton:
                icon: 'cart'

            MDBoxLayout:
                padding: 9, 0, 0, 0
                spacing: 0
                adaptive_height: True

